FROM --platform=$BUILDPLATFORM golang:1.24-alpine AS build
ARG TARGETARCH
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY main.go .
RUN CGO_ENABLED=0 GOARCH=$TARGETARCH go build -o /cc-live .

FROM --platform=$TARGETPLATFORM alpine:3.21
COPY --from=build /cc-live /cc-live
EXPOSE 8080
ENTRYPOINT ["/cc-live"]
